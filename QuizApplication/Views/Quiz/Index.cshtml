@*Its job is to generate the HTML that a user sees in their browser*@
@model QuizApplication.Models.ViewModels.QuizViewModel
@if (Model.Questions.Any())
{

    <form asp-controller="Quiz" asp-action="Submit" method="Post">
        <div class="mt-4">
        <h1>Guess the capital - (@Model.Questions.Count questions)</h1>

            <div class="mt-4">
                @for (int i =0; i<Model.Questions.Count; i++)
                {
                    <h3>@Model.Questions.[i].Text</h3>
                    <div>
                        @foreach (var option in Model.Questions[i].Options)
                        {
                           <p>
                                <label>
                                    <input type="radio" value="@option.Value" name="userANswers[@i]"/>
                                    @option.Text
                                </label>
                           </p>
                        }
                    </div>
                }
                </div>
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
    </form>
}